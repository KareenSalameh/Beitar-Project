<+>body, input{\r\n    font-family: var(--bs-body-font-family);\r\n}\r\n\r\n/*customize the border outside the table*/ \r\n.bord {\r\n    border: 6px solid #000;\r\n    border-radius: 7%;\r\n    padding: 10px;\r\n}\r\n\r\n/*customize the search fields*/\r\ninput {\r\n    background-color: rgb(245, 229, 3);\r\n    font-size: 16px;\r\n    border-radius: 7%;\r\n}\r\n\r\n/*customize the action buttons*/\r\n.crud {\r\n    font-size: 16px;\r\n    border-radius: 10%;\r\n    background-color: rgba(0, 0, 0, 0.797);\r\n    color: rgb(245, 229, 3);\r\n    height: 80%;\r\n}\r\n\r\n.date {\r\n    text-align: left;\r\n}\r\n\r\n/*customize the images inside the table*/\r\n.pics {\r\n    transform: scale(0.22);\r\n    margin: 0;\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    max-height: 40px;\r\n}\r\n\r\n/*customize the image size*/\r\n.bsymbol {\r\n    margin-top: 20px;\r\n    position:absolute;\r\n    top: -10px;\r\n    left: 20px;\r\n    width: 120px;\r\n}\r\n\r\n/*increase the title size*/\r\n#title {\r\n    font-size: 50px;\r\n}\r\n\r\n.dropdown-menu {\r\n    display:list-item;\r\n    right: 0%;\r\n    top:30%;\r\n}\r\n\r\n#menu {\r\n    padding-right: 0px;\r\n    right: 0%;\r\n    top: 20%;\r\n    background-image:url('menu.png');\r\n    height: 50px;\r\n    width: 50px;\r\n}\r\n\r\n/*customize the plus images inside the table*/\r\n.plus {\r\n    transform: scale(0.05);\r\n    display: flex;\r\n    align-items: center;\r\n    justify-content: center;\r\n    max-height: 40px;\r\n}\r\n\r\n/*customize the popup background*/\r\n.popup{\r\n    background: rgba(0, 0, 0, 0.6);\r\n    left: 0.01%;\r\n    width: 100%;\r\n    height: 150%;\r\n    position: absolute;\r\n    top:0;\r\n    display: none;\r\n    justify-content: center;\r\n    align-items: center;\r\n}\r\n\r\n/*customize the popup content*/\r\n.popup-content{\r\n    height: 400px;\r\n    width: 700px;\r\n    background: #cbc67cdc;\r\n    padding: 20px;\r\n    border-radius: 5px;\r\n    position: relative;\r\n    text-align: center;\r\n}\r\n\r\n/*customize the image size in the popup*/\r\n.img{\r\n    transform: scale(0.22);\r\n    margin: 220px;\r\n    margin-top: -85px;\r\n}\r\n\r\n/*customize the close button*/\r\n.close{\r\n    position: absolute;\r\n    height: 15px;\r\n}\r\n\r\n/*positioning the fileds in the popup*/\r\n.quiz {\r\n    top:30%;\r\n    position: absolute;\r\n}\r\n\r\n.fs-4 , .fs-3 {\r\n   text-align: center;\r\n}\r\n\r\ninput:hover{\r\n        box-shadow: 0px 2px 3px rgb(192, 185, 185);\r\n}\r\n\r\n#active_d_o_b, #request_d_o_b{\r\n    width: 188px;\r\n    height: 29.2px;\r\n    text-align: center;\r\n}\r\n\r\n.dropdown-menu{\r\n    display: none;\r\n}\r\n\r\n.dropdown{\r\n    margin-right: 10px;\r\n    padding-top: 10px;\r\n}\r\n\r\n.btn-dark, .btn-dark:hover{\r\n    color: rgb(245, 229, 3);\r\n}
